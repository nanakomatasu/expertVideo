.navigation-bar {
  overflow: hidden;
  width: 100%;
  height: 196rpx;
}
.navigation-bar .navgation-bar-content {
  position: relative;
  margin-top: 88rpx;
  width: 100%;
  height: 108rpx;
  text-align: center;
}
.navigation-bar .text-color {
  color: #fff;
}
.material-content {
  width: 100%;
  height: calc(100vh - 196rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.material-content .material-content-left {
  width: 200rpx;
  height: 100%;
  background-color: #FAF7F5;
}
.material-content .material-content-left .left-line {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 28rpx;
  background-color: #FAA82C;
}
.material-content .material-content-left .material-content-left-item {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4C4C4C;
}
.material-content .material-content-left .select-material-content-left-item {
  background-color: #fff;
  color: #FAA82C;
}
.material-content .material-content-right {
  width: calc(100% - 200rpx);
  height: 100%;
}
.material-content .material-content-right .material-content-right-tabs {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
}
.material-content .material-content-right .material-content-right-tabs-main {
  width: 100%;
  height: calc(100% - 80rpx);
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view {
  width: 100%;
  height: 100%;
  padding: 28rpx 24rpx;
  box-sizing: border-box;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .image-content {
  box-sizing: border-box;
  padding: 0 15rpx;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .image-content .image-item {
  width: 220rpx;
  height: 220rpx;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .image-content .image-item image {
  width: 100%;
  height: 100%;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .text-item {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  color: #000000;
  margin-bottom: 28rpx;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .text-item .serial-number {
  text-align: left;
  width: 56rpx;
  font-size: 40rpx;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .text-item .text-content {
  width: 75%;
  height: 102rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .music-item {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  color: #000000;
  margin-bottom: 28rpx;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .music-item .serial-number {
  text-align: left;
  width: 56rpx;
  font-size: 40rpx;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .music-item .text-content {
  width: 75%;
  height: 72rpx;
  font-size: 28rpx;
  color: #000000;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .music-item .text-content .music-name {
  width: 100%;
}
.material-content .material-content-right .material-content-right-tabs-main .scroll-view .music-item .text-content .singer {
  width: 100%;
  font-size: 20rpx;
  color: #7E7E7E;
  margin-top: 4rpx;
}