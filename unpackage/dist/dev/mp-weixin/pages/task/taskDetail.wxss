.navigation-bar {
  overflow: hidden;
  width: 100%;
  height: 196rpx;
}
.navigation-bar .navgation-bar-content {
  position: relative;
  margin-top: 88rpx;
  width: 100%;
  height: 108rpx;
  text-align: center;
}
.navigation-bar .text-color {
  color: #fff;
}
.user-card {
  padding: 32rpx 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
}
.user-card .user-avatar {
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user-card .user-avatar image {
  width: 100%;
  height: 100%;
}
.user-card .user-info {
  margin-left: 16rpx;
}
.user-card .user-info .user-nick {
  font-size: 32rpx;
  color: #1A1A1A;
  font-weight: bold;
}
.user-card .user-info .user-identity {
  margin-top: 24rpx;
  padding: 4rpx 16rpx;
  background-color: #FAA82C;
  font-size: 24rpx;
  color: #fff;
  border-radius: 26rpx 26rpx 26rpx 26rpx;
}
.tips-content {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1A1A1A;
  margin-top: 32rpx;
}
.tips-content .tips-lable {
  padding: 4rpx 32rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #FAA82C;
  border-radius: 6rpx 6rpx 6rpx 6rpx;
  margin-right: 24rpx;
}
.task-content {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  box-sizing: border-box;
  padding: 32rpx;
}
.task-content .create-order {
  font-size: 32rpx;
  color: #1A1A1A;
  display: flex;
  flex-direction: column;
  margin-top: 48rpx;
}
.task-content .create-order .nav-store {
  margin-top: 24rpx;
  width: 208rpx;
  height: 64rpx;
  background-color: #FAA82C;
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.task-content .task-flow {
  width: 100%;
}
.task-content .task-flow .task-flow-tips {
  width: 100%;
  height: 40rpx;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
}
.task-content .task-flow .task-flow-tips .tips-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.task-content .task-flow .task-flow-tips .tips-icon image {
  width: 100%;
  height: 100%;
}
.task-content .task-flow .task-flow-tips .tips-text {
  font-size: 32rpx;
  color: #1A1A1A;
  margin-left: 16rpx;
  font-weight: bold;
}
.task-content .task-flow .task-flow-list {
  margin-top: 32rpx;
}
.task-content .task-flow .task-flow-list .task-flow-item {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}
.task-content .task-flow .task-flow-list .task-flow-item .serial-number {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-color: #FAA82C;
  margin-right: 16rpx;
}
.task-content .task-flow .next-task {
  width: 524rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: linear-gradient(90deg, #FFA143 0%, #FAA82C 100%);
  margin: 48rpx 0 0 50%;
  transform: translateX(-50%);
  border-radius: 88rpx 88rpx 88rpx 88rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}