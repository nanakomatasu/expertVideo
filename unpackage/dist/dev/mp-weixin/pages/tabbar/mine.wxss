.navigation-bar {
  overflow: hidden;
  width: 100%;
  height: 440rpx;
}
.navigation-bar .navgation-bar-content {
  margin-top: 88rpx;
  width: 100%;
  height: 108rpx;
  text-align: center;
}
.navigation-bar .text-color {
  color: #fff;
}
.navigation-bar .user-card {
  box-sizing: border-box;
  height: 184rpx;
  background-color: #fff;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  padding: 24rpx;
  display: flex;
}
.navigation-bar .user-card .user-avatar {
  width: 136rpx;
  height: 136rpx;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
  overflow: hidden;
}
.navigation-bar .user-card .user-avatar image {
  width: 100%;
  height: 100%;
}
.navigation-bar .user-card .user-info {
  margin-left: 16rpx;
  width: calc(100% - 296rpx);
  height: 100%;
}
.navigation-bar .user-card .user-info .user-name-gender {
  width: 100%;
  display: flex;
  align-items: center;
}
.navigation-bar .user-card .user-info .user-lable {
  width: 100%;
  display: flex;
  margin-top: 44rpx;
}
.navigation-bar .user-card .user-info .user-lable .user-lable-item {
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #FAA82C;
  border-radius: 26rpx 26rpx 26rpx 26rpx;
  white-space: nowrap;
}
.navigation-bar .user-card .user-info .user-lable .user-level {
  margin-left: 22rpx;
}
.navigation-bar .user-card .edit-user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 64rpx;
  font-size: 20rpx;
  color: #4C4C4C;
}
.mine-funcs {
  margin-top: 16rpx;
  height: 204rpx;
  background-color: #fff;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.mine-funcs .mine-func-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mine-funcs .mine-func-item .mine-func-item-icon {
  width: 68rpx;
  height: 68rpx;
}
.mine-funcs .mine-func-item .mine-func-item-icon image {
  width: 100%;
  height: 100%;
}
.mine-funcs .mine-func-item .mine-func-item-title {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #000000;
}
.utilities-content {
  margin-top: 16rpx;
  padding: 32rpx 32rpx 0 32rpx;
  background-color: #fff;
  border-radius: 8rpx 8rpx 8rpx 8rpx;
}
.expert-content {
  margin-top: -40rpx;
  height: 268rpx;
  position: relative;
  overflow: hidden;
}
.expert-content .expert-content-back {
  position: absolute;
  width: 100%;
  height: 100%;
}
.expert-content .expert-title {
  margin-top: 9rpx;
  box-sizing: border-box;
  padding: 0 32rpx;
  position: relative;
  width: 100%;
  height: 70rpx;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.expert-content .expert-title .switch-title-item {
  font-size: 32rpx;
  color: #1A1A1A;
}
.expert-content .expert-title .right-title {
  color: #fff;
}
.expert-content .expert-tips {
  position: relative;
  z-index: 1;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  color: #1A1A1A;
  margin-top: 40rpx;
}
.expert-content .expert-progress {
  box-sizing: border-box;
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
  width: 100%;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.expert-content .expert-progress .show-progress {
  width: calc(100% - 84rpx);
}
.expert-content .expert-progress .show-level {
  margin-left: -10rpx;
  width: 84rpx;
  height: 48rpx;
  border-radius: 54rpx 54rpx 54rpx 54rpx;
  background-color: #F2F3F8;
  text-align: center;
  line-height: 48rpx;
}
.safe-box {
  width: 100%;
  height: 50rpx;
}